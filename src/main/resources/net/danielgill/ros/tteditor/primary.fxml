<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="400.0" maxWidth="625.0" minHeight="400.0" minWidth="625.0" prefHeight="400.0" prefWidth="625.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.danielgill.ros.tteditor.PrimaryController">
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
   <children>
      <Label alignment="TOP_LEFT" text="ROS Timetable Editor">
         <font>
            <Font size="28.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <HBox prefHeight="352.0" prefWidth="624.0">
         <children>
            <VBox prefHeight="265.0" prefWidth="311.0">
               <children>
                  <TableView fx:id="serviceView" prefHeight="265.0" prefWidth="268.0">
                    <columns>
                      <TableColumn fx:id="refColumn" editable="false" prefWidth="50.0" resizable="false" text="Ref" />
                      <TableColumn fx:id="descColumn" editable="false" prefWidth="150.0" resizable="false" text="Description" />
                    </columns>
                  </TableView>
               </children>
            </VBox>
            <VBox prefHeight="265.0" prefWidth="300.0" spacing="10.0">
               <children>
                  <Label text="Timetable Controls" />
                  <HBox prefHeight="24.0" prefWidth="316.0" spacing="10.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#openTTB" text="Open" />
                        <Button mnemonicParsing="false" onAction="#validateTimetable" text="Validate" />
                        <Button mnemonicParsing="false" onAction="#saveTTB" text="Save" />
                     </children>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </HBox>
                  <Label text="Start Time:" />
                  <TextField fx:id="startTimeTextField" />
                  <Line endX="213.5" startX="-100.0" />
                  <Label text="Timetable Statistics" />
                  <VBox prefHeight="81.0" prefWidth="316.0">
                     <children>
                        <HBox prefHeight="20.0" prefWidth="295.0">
                           <children>
                              <Label text="Number of Services">
                                 <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </padding>
                              </Label>
                              <Label fx:id="statNumber" text="Label">
                                 <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </padding>
                              </Label>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding></VBox>
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#createService" text="Create New Service" />
            <Button mnemonicParsing="false" onAction="#openService" text="Edit Selected" />
            <Button mnemonicParsing="false" onAction="#deleteService" text="Delete Selected" />
         </children>
      </HBox>
   </children>
</VBox>
