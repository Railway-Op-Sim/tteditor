                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
            <VBox prefHeight="330.0" prefWidth="329.0">
               <children>
                  <TableView fx:id="eventsView" prefHeight="339.0" prefWidth="329.0">
