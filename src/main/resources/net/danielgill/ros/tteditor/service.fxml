                              <Insets top="5.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="serviceRef" prefHeight="25.0" prefWidth="190.0" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
